<h1>New Ingredient</h1>

<%= form_for(@ingredient) do |i| %>

  <% if @ingredient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ingredient.errors.count, "error") %>
      prohibited this ingredient from being saved:
      </h2>
      <ul>
        <% @ingredient.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end  %>

  <p>
    <%= i.label :name %><br>
    <%= i.text_field :name %>
  </p>

  <p>
    <%= i.label :description%><br>
    <%= i.text_field :description%>
  </p>

  <%= i.submit %>
<% end %>
