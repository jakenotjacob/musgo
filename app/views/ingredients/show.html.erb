<% title(@ingredient.name, "Ingredients") %>

<h1><%= @ingredient.name %></h1>
<p><%= @ingredient.description %></p>

<%= link_to "Edit Ingredient", edit_ingredient_path(@ingredient) %>

<%= link_to "Delete Ingredient",
  ingredient_path(@ingredient),
  method: :delete,
  data: { confirm: "Are you sure you want to delete this ingredient?"}
%>
